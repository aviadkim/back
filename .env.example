# General Settings
FLASK_ENV=development
PORT=5000
SECRET_KEY=your_secret_key_here # Change to a secure random string
JWT_SECRET=your_jwt_secret_here # Change to a secure random string

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/financial_documents

# LLM Provider Selection (Choose one: openrouter, huggingface, mistral, openai)
LLM_PROVIDER=openrouter

# API Keys for LLM Providers (Only needed for the provider you select)
OPENAI_API_KEY=your_openai_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenRouter Model Configuration
# These are examples of available models, change as needed
OPENROUTER_PRIMARY_MODEL=google/gemini-1.5-pro-latest
OPENROUTER_SECONDARY_MODEL=anthropic/claude-3-sonnet-20240229
OPENROUTER_TERTIARY_MODEL=anthropic/claude-3-opus-20240229
OPENROUTER_FALLBACK_MODEL=meta-llama/llama-3-70b-instruct

# AWS Configuration (Optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_EXECUTION_ENV=ElasticBeanstalk # Set this only on AWS environments

# Storage Preferences
USE_AWS_STORAGE=False # Set to True to use S3 instead of local storage

# Default Language (he = Hebrew, en = English)
DEFAULT_LANGUAGE=he

# OCR and PDF Processing
# For Windows: Path to Tesseract OCR executable
# TESSERACT_CMD=C:\Program Files\Tesseract-OCR\tesseract.exe

# Logging
LOG_LEVEL=INFO
