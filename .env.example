# Application Configuration
# Make a copy of this file named '.env' and fill in your values

#---------------------------------------
# Server Settings
#---------------------------------------
# Port for the Flask API server
PORT=5000
# Development or production environment
FLASK_ENV=development
# Debug mode (true/false)
DEBUG=true
# Secret key for session management - CHANGE THIS IN PRODUCTION!
SECRET_KEY=change_this_to_a_secure_random_string
# JWT secret for authentication - CHANGE THIS IN PRODUCTION!
JWT_SECRET=change_this_to_a_secure_random_string

#---------------------------------------
# Database Settings
#---------------------------------------
# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/financial_documents
# MongoDB username (if using authentication)
MONGO_USERNAME=
# MongoDB password (if using authentication)
MONGO_PASSWORD=

#---------------------------------------
# File Storage Settings
#---------------------------------------
# Storage type: 'local' or 's3'
STORAGE_TYPE=local
# Local storage path (relative to application root)
LOCAL_STORAGE_PATH=uploads
# Maximum file size in MB
MAX_FILE_SIZE=50

# AWS S3 Configuration (if STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET_NAME=financial-docs-bucket

#---------------------------------------
# OCR Settings
#---------------------------------------
# OCR engine: 'local' (uses Tesseract) or 'cloud' (uses cloud services)
OCR_ENGINE=local
# Default language for OCR
DEFAULT_LANGUAGE=eng
# Additional languages for OCR (comma-separated)
ADDITIONAL_LANGUAGES=heb

# Cloud OCR Configuration (if OCR_ENGINE=cloud)
# Service to use: 'aws_textract', 'google_vision', etc.
CLOUD_OCR_SERVICE=
# API keys for cloud OCR services
AWS_TEXTRACT_KEY=
GOOGLE_VISION_KEY=

#---------------------------------------
# AI/ML Settings
#---------------------------------------
# Enable AI features
ENABLE_AI_FEATURES=true
# API key for HuggingFace
HUGGINGFACE_API_KEY=
# API key for OpenAI (optional)
OPENAI_API_KEY=
# API key for other AI providers (optional)
MISTRAL_API_KEY=

#---------------------------------------
# Logging Settings
#---------------------------------------
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# Log file location
LOG_FILE=logs/application.log
# Enable rotation of log files
LOG_ROTATION=true
# Maximum log file size in MB before rotation
LOG_MAX_SIZE=10
# Number of backup log files to keep
LOG_BACKUP_COUNT=5

#---------------------------------------
# Frontend Settings
#---------------------------------------
# URL of the backend API (used by frontend)
REACT_APP_API_URL=http://localhost:5000/api
# Enable/disable debug features in frontend
REACT_APP_DEBUG=true
# Default language for UI
REACT_APP_DEFAULT_LANGUAGE=en

#---------------------------------------
# Performance Settings
#---------------------------------------
# Number of worker processes
WORKERS=4
# Maximum concurrent document processing tasks
MAX_CONCURRENT_PROCESSING=2
# Document processing timeout (seconds)
PROCESSING_TIMEOUT=300
# Enable caching
ENABLE_CACHE=true
# Cache expiration time (seconds)
CACHE_EXPIRATION=3600

#---------------------------------------
# Security Settings
#---------------------------------------
# Enable CORS
ENABLE_CORS=true
# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
# Enable rate limiting
ENABLE_RATE_LIMIT=true
# Rate limit (requests per minute)
RATE_LIMIT=60
# JWT token expiration (seconds)
JWT_EXPIRATION=86400
