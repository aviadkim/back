files:
  "/opt/elasticbeanstalk/tasks/taillogs.d/flask-app.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      /var/app/current/logs/app.log
      /var/app/current/logs/error.log

commands:
  01_create_log_files:
    command: |
      mkdir -p /var/app/current/logs/
      touch /var/app/current/logs/app.log
      touch /var/app/current/logs/error.log
      chmod 644 /var/app/current/logs/app.log
      chmod 644 /var/app/current/logs/error.log
      chown -R webapp:webapp /var/app/current/logs/
