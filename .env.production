# Production Environment Configuration

#---------------------------------------
# Server Settings
#---------------------------------------
PORT=8080
FLASK_ENV=production
DEBUG=false
# In production, use secure random strings for these values
SECRET_KEY=change_this_to_a_secure_random_string_in_production
JWT_SECRET=change_this_to_a_secure_random_string_in_production

#---------------------------------------
# Database Settings
#---------------------------------------
MONGO_URI=mongodb://mongodb:27017/financial_documents_prod

#---------------------------------------
# File Storage Settings
#---------------------------------------
STORAGE_TYPE=s3
LOCAL_STORAGE_PATH=uploads
MAX_FILE_SIZE=50
S3_BUCKET_NAME=financial-docs-prod

#---------------------------------------
# OCR Settings
#---------------------------------------
OCR_ENGINE=aws_textract
DEFAULT_LANGUAGE=eng
ADDITIONAL_LANGUAGES=heb

#---------------------------------------
# Logging Settings
#---------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/production.log
LOG_ROTATION=true

#---------------------------------------
# Frontend Settings
#---------------------------------------
REACT_APP_API_URL=/api
REACT_APP_DEBUG=false

#---------------------------------------
# Performance Settings
#---------------------------------------
WORKERS=4
MAX_CONCURRENT_PROCESSING=10
PROCESSING_TIMEOUT=600

#---------------------------------------
# Security Settings
#---------------------------------------
ENABLE_CORS=false
ENABLE_RATE_LIMIT=true
RATE_LIMIT=60
JWT_EXPIRATION=86400