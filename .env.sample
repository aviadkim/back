# הגדרות כלליות
FLASK_ENV=production
PORT=10000

# הגדרות API חיצוניים - יש להגדיר לפחות אחד מהם
HUGGINGFACE_API_KEY=your_huggingface_api_key_here
# MISTRAL_API_KEY=your_mistral_api_key_here     # אופציונלי
# OPENAI_API_KEY=your_openai_api_key_here       # אופציונלי

# הגדרות מסד נתונים - יש להחליף עם חיבור MongoDB אמיתי
MONGO_URI=mongodb://username:password@host:port/financial_documents?retryWrites=true&w=majority

# הגדרות אבטחה - יש להחליף ערכים אלה בערכים רנדומליים
SECRET_KEY=replace_with_random_secret_key
JWT_SECRET=replace_with_random_jwt_secret

# הגדרות שפה
DEFAULT_LANGUAGE=he

# הגדרות ניתוב
TESSERACT_PATH=/usr/bin/tesseract
